---
import TextDecorationSkip from "./TextDecorationSkip.astro";
import Cart from "./Cart.tsx";
import { getCountryFromUrl, getLang, useTranslations } from "../i18n/utils";
import { getCart } from "../api";
import LanguagePicker from "./LanguagePicker.astro";
import { availableLanguagesPerCountry } from "../i18n/ui";

const cart = await getCart(Astro.request);

const lang = getLang(Astro.url, Astro.cookies);
const country = getCountryFromUrl(Astro.url);
const t = useTranslations(lang);

const isLanguageSwitchEnabled =
  availableLanguagesPerCountry[country].length > 1;
---

<style>
  @import url("https://fonts.googleapis.com/css2?family=Lobster&display=swap");

  header {
    margin: 1rem 2rem;
    display: flex;
    justify-content: space-between;
  }

  h1 {
    margin: 0;
    font-family: "Lobster", cursive;
    color: black;
  }

  a,
  a:visited {
    color: inherit;
    text-decoration: none;
  }

  .right-pane {
    display: flex;
  }

  .material-icons {
    font-size: 36px;
    margin-right: 1rem;
  }
</style>
<link
  href="https://fonts.googleapis.com/icon?family=Material+Icons"
  rel="stylesheet"
/>
<header>
  <h1><a href="/"><TextDecorationSkip text={t("header.title")} /></a></h1>
  <div class="right-pane">
    {isLanguageSwitchEnabled && <LanguagePicker />}
    <a href="/login">
      <span class="material-icons"> login</span>
    </a>
    <Cart client:load cart={cart} />
  </div>
</header>
